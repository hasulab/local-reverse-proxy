{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Certificates": {
      "Default": {
        "Path": "localhost.pfx",
        "Password": "Test1234"
      }
    }
  },
  "ReverseProxy": {
    "Clusters": {
      "BlobServer": {
        "Destinations": {
          "Server1": {
            "Address": "http://127.0.0.1:10000"
          }
        }
      },
      "QueueServer": {
        "Destinations": {
          "Server1": {
            "Address": "http://127.0.0.1:10001"
          }
        }
      },
      "TableServer": {
        "Destinations": {
          "Server1": {
            "Address": "http://127.0.0.1:10002"
          }
        }
      },
      "WebApp": {
          "Destinations": {
            "Server1": {
              "Address": "http://localhost:5080"
            }
          }
       },
       "OtherServer": {
          "Destinations": {
            "Client1": {
              "Address": "https://localhost:5000"
            }
          }
        }
      },
    "Routes": {
      "QueuesServerRoute": {
        "ClusterId": "QueueServer",
        "Match": {
          "Path": "/Queues/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/Queues"
          }
        ]
      },
      "BlobServerRoute": {
        "ClusterId": "BlobServer",
        "Match": {
          "Path": "/Blob/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/Blob"
          }
        ]
      },
      "BlobRawStorageServerRoute": {
        "ClusterId": "BlobServer",
        "Match": {
          "Path": "/rawstorage/{**catch-all}"
        }
      },
      "TableServerRoute": {
        "ClusterId": "TableServer",
        "Match": {
          "Path": "/Tables/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/Tables"
          }
        ]
      },
      "WebAppRoute": {
        "ClusterId": "WebApp",
        "Match": {
          "Path": "/WebApp/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/WebApp"
          }
        ]
      },
      "AllRoute": {
        "ClusterId": "OtherServer",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    }
  },
  "Authentication": {
    "AzureAd": {
      "Instance": "https://login.microsoftonline.com/",
      "Domain": "yourdomain.onmicrosoft.com",
      "TenantId": "yourtenantid",
      "ClientId": "yourclientid",
      "CallbackPath": "/signin-oidc",
      "ClientSecret": "yourclientsecret",
      "Audience": "youraudience"
    },
    "AuthExlusions": [
      "HTTP: GET /",
      "/health",
      "/"
    ]
  }
}
